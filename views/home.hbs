{{!-- Create Button + Input --}}
<div class="row p-4 my-5">
    <div class="col-auto">
        <a class="btn btn-dark" href="/employees/create"><i class="fa-solid fa-user-plus"></i> Add </a>
    </div>

    <div class="col-auto ms-auto">
        <form method="post" action="/employees/list_search">
            <div class="input-group">
                <span class="input-group-text">Input your search</span>
                <input name="name" type="text" class="form-control" placeholder="Name">
                <button class="btn btn-outline-secondary">Search</button>
            </div>
        </form>
    </div>
</div>

{{!-- Table --}}
<div class="row">
    <table class="table table-striped table-borderless table-hover  table-response shadow">
        <!-- Head -->
        <thead>
            <tr>
                <th>#</th>
                <th>View</th>

                {{!-- <th>Name</th> --}}
                <th>
                    <div class="dropdown dropdown-toggle" data-bs-toggle="dropdown">
                        Name
                    </div>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/employees/list">None</a></li>
                        <li><a class="dropdown-item" href="/employees/list/name/asc">Ascending</a></li>
                        <li><a class="dropdown-item" href="/employees/list/name/desc">Descending</a></li>
                    </ul>
                </th>

                <th>Avatar</th>

                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <!-- Body -->
        <tbody>
            {{#each employees}}
            <tr>
                <th class="align-middle">{{increase @index}}</th>
                <td class="align-middle">
                    <a class="btn" href="/employees/detail/{{this._id}}"><i class="fa-regular fa-eye"></i></a>
                </td>

                <td class="align-middle">{{this.name}}</td>
                <td class="align-middle">
                    <img src="/uploads/{{this.avatar}}" width="48px" height="48px" alt="avatar" class="rounded">
                </td>

                <td class="align-middle">
                    <a class="btn" href="/employees/update/{{this._id}}"><i class="fa-regular fa-pen-to-square"></i></a>
                </td>
                <td class="align-middle">
                    <button class="btn" type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#my_model_{{this._id}}">
                        <i class="fa-regular fa-trash-can"></i>
                    </button>
                </td>
                <!-- The Modal -->
                <div class="modal" id="my_model_{{this._id}}">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Delete</h4>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <!-- Modal body -->
                            <div class="modal-body">
                                {{this.name}}
                            </div>
                            <!-- Modal footer -->
                            <div class="modal-footer col-auto">
                                <a type="button" class="btn btn-danger" href="/employees/delete/{{this._id}}">Yes</a>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            </div>
                        </div>
                    </div>
                </div>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


